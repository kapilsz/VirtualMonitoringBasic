<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#148BC1"
    android:weightSum="5"
    android:orientation="vertical"
    tools:context="ui.share.share">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:src="@drawable/home_top_logo_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="V I R T U A L                       M O N I T O R I N G"
                android:textStyle="bold"
                android:textColor="#3C3B34"
                android:textSize="40sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Your Sytems in Better Way"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"
                android:textSize="20dp"
                android:gravity="center_horizontal"/>

        </LinearLayout>
    </RelativeLayout>

